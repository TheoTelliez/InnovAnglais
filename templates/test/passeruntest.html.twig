{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Passer un test {% endblock %}
{% block contenu %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center text-primary p-4">Passer un test</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 bg-white p-4 m-0 text-primary" id="divTestG" name="divTestG">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.theme, 'Choisir votre th√®me (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
                    {{ form_widget(form.theme, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mx-auto text-center">
                    {{ form_widget(form.lancer, { 'label': "Lancer", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="./js/passeruntest.js" crossorigin="anonymous"></script>

{% endblock %}