{% extends 'base.html.twig' %}

{% block title %}{{parent()}}S'inscrire{% endblock %}

{% block contenu %}
    {{parent()}}

    {% for message in app.flashes('existedeja') %}
        <div class="flash-notice alert alert-warning text-center" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center text-primary p-4">S'inscrire</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-8 bg-dark p-4 m-0 text-primary">
                {{ form_start(form) }}
                <div class="form-group" style="color:white">
                    {{ form_label(form.email, 'Votre Email ', {'label_attr': {'class': 'font-weightbold'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group" style="color:white">
                    {{ form_label(form.password, 'Votre Mot de Passe ', {'label_attr': {'class': 'font-weightbold'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group" style="color:white">
                    {{ form_label(form.confirmation, 'Confirmer votre Mot de Passe ', {'label_attr': {'class': 'font-weightbold'}}) }}
                    {{ form_widget(form.confirmation, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mx-auto text-center">
                    {{ form_widget(form.inscrire, { 'label': "S'inscrire", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>


    </div>

{% endblock %}