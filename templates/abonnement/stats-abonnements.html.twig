{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Statistiques des abonnements{% endblock %}
{% block contenu %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center text-primary p-4">Statistiques des abonnements par utilisateurs</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-8 p-4 m-0 text-primary">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Libell√©</th>
                            <th scope="col">Nombre d'utilisateurs</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for abo in abonnements %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{ abo.libelle |capitalize }}</td>

                                <td>{{ abo.NbParAbo |capitalize }}</td>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}