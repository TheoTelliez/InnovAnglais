{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Liste des abonnements{% endblock %}
{% block contenu %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center text-primary p-4">Liste des abonnements</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-8 p-4 m-0 text-primary">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Libell√©</th>
                            <th scope="col">Paiement en une fois</th>
                            <th scope="col">Modifier</th>
                            <th scope="col">Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for abo in abonnements %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{ abo.libelle |capitalize }}</td>
                                {% if abo.paiementenunefois == 1 %}
                                    <td>Oui</td>
                                {% else %}
                                    <td>Non</td>
                                {% endif %}

                                <td><a href="{{ path('modif-abonnement',{'id':abo.id}) }}" class="text-white">
                                        <span class="material-icons" title="Modifier un abonnement">create</span></a>
                                </td>
                                <td><a href="{{ path('liste-abonnements',{'supp':abo.id}) }}" class="text-white">
                                        <span class="material-icons" title="Supprimer l'abonnement">delete</span></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}