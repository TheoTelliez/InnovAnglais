{% extends 'base.html.twig' %}
{% block title %}{{ parent() }}Liste entreprises SQL{% endblock %}
{% block contenu %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center text-primary p-4">Liste des entreprises + SQL</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-8 p-4 m-0 text-primary">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Libell√©</th>
                            <th scope="col">Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ent in entreprises %}
                        <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                            <td>{{ ent.libelle |capitalize }}</td>
                            <td><a href="{{path('liste-entreprises',{'supp':ent.id})}}" class="text-white"><span
                                            class="material-icons" title="Supprimer l'entreprise">delete</span></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% for c in count %}
                    <span style="color: white">Il y a <span style="color: red">{{ c.NbEnt }}</span> entreprises au total.</span>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}