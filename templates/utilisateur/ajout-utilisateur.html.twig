{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Ajout utilisateur {% endblock %}
{% block contenu %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center text-primary p-4">Ajout d'un Utilisateur</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 bg-white p-4 m-0 text-primary">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.nom, 'Nom (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.prenom, 'Pr√©nom (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mx-auto text-center">
                    {{ form_widget(form.ajouter, { 'label': "Ajouter", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}