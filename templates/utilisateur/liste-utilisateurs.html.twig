{% extends 'base.html.twig' %}
{% block title %}{{parent()}} - Liste utilisateurs{% endblock %}
{% block contenu %}
    {{parent()}}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center p-4" style="color:white">Liste des utilisateurs</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-8 p-4 m-0 text-primary">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th style="text-align: center" scope="col">Nom</th>
                            <th style="text-align: center" scope="col">Prénom</th>
                            <th style="text-align: center" scope="col">Abonnement</th>
                            <th style="text-align: center" scope="col">Entreprise</th>
                            <th style="text-align: center" scope="col">1</th>
                            <th style="text-align: center" scope="col">2</th>
                            <th style="text-align: center" scope="col">3</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for utilisateur in utilisateurs %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td style="text-align: center">{{utilisateur.nom |capitalize }}</td>
                                <td style="text-align: center">{{utilisateur.prenom |capitalize }}</td>
                                <td style="text-align: center">{{utilisateur.abonnement.libelle }}</td>
                                <td style="text-align: center">{{utilisateur.entreprise.libelle }}</td>
                                
                                <td><a href="{{path('user-profile',{'id':utilisateur.id})}}" class="text-white">
                                        <span class="material-icons" title="Accéder au profil">account_circle</span></a></td>
                                <td><a href="{{path('modif-utilisateur',{'id':utilisateur.id})}}" class="text-white">
                                        <span class="material-icons" title="Modifier un utilisateur">create</span></a></td>
                                <td><a href="{{path('liste-utilisateurs',{'supp':utilisateur.id})}}"  class="text-white">
                                        <span class="material-icons" title="Supprimer le utilisateur">delete</span></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}